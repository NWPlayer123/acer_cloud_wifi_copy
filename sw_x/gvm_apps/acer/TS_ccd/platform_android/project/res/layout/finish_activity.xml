<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1">
		<LinearLayout android:orientation="vertical"
			android:layout_height="fill_parent" android:layout_width="fill_parent">
			<TextView
				android:text="@string/finish_label_summery"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_margin="5dip" />
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="46dip" android:orientation="horizontal"
		style="@android:style/ButtonBar" android:weightSum="1">
		<Button android:id="@+id/finish_button_finish"
			android:layout_height="40dip" android:text="@string/button_finish"
			android:textSize="14dip" android:layout_width="wrap_content"
			android:layout_weight="0.35" />
	</LinearLayout>
</LinearLayout>
