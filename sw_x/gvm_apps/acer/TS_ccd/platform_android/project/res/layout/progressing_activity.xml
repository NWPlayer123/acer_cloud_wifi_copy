<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="center_vertical"
        android:layout_height="180dip"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/processing_text_summery"
            android:layout_width="wrap_content"
            android:layout_height="72dip"
            android:text="@string/processing_label_summery"
            android:layout_marginTop="18dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip" />
    <ProgressBar android:indeterminateDrawable="@drawable/anim_progressbar_green"
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/processing_text_summery"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="68dip"
            android:layout_marginTop="13dip" />
    <TextView android:id="@+id/progressing_label_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/processing_label_processing_signup"
            android:layout_alignBottom="@+id/progressBar1"
            android:layout_toRightOf="@+id/progressBar1"
            android:layout_marginLeft="13dip"
            android:layout_marginBottom="14dp" />
</RelativeLayout>
