<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/tablet_title_signup" android:layout_width="match_parent" android:layout_height="56dip">
        <ImageView android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView2" android:layout_centerVertical="true" android:layout_alignParentLeft="true"></ImageView>
        <TextView android:layout_width="wrap_content" android:textStyle="bold" android:textSize="25sp" android:layout_height="wrap_content" android:text="Acer Tian Shan" android:id="@+id/textView1" android:layout_centerVertical="true" android:layout_toRightOf="@+id/imageView2" android:layout_marginLeft="10dip"></TextView>
        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView1" android:src="@drawable/acer_logo" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="10dp"></ImageView>
    </RelativeLayout>
    <TextView android:textSize="21sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Acer Tian Shan automaticaly syncs and share your data, you can add acer devices and two non-acer devices to Tian Shan." android:id="@+id/textView2" android:layout_below="@+id/relativeLayout1" android:layout_alignParentLeft="true" android:layout_marginLeft="40dp" android:layout_marginTop="20dip"></TextView>
    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="480px" android:layout_below="@+id/textView2" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginRight="10dp" android:layout_marginTop="30dp" android:layout_marginBottom="20dp">
        <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="#FF202020">
		    <TextView
		        android:id="@+id/device_item_text_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:textSize="20sp"
		        android:text="Registered Devices"
		        />
		</LinearLayout>
        <ListView android:layout_height="wrap_content" android:id="@+id/listView1" android:layout_width="match_parent"></ListView>
    </LinearLayout>
    <RelativeLayout android:id="@+id/relativeLayout1" android:background="#FF202020" android:layout_height="50dip" android:layout_width="match_parent" android:layout_below="@+id/tablet_title_signup" android:layout_alignParentLeft="true">
        <Button android:text="Unlink" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/device_button_unlink"></Button>
        <ImageButton android:id="@+id/device_button_settings" android:src="@drawable/device_item_icon_1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_toLeftOf="@+id/device_image_people"></ImageButton>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="TextView" android:id="@+id/device_label_account_name" android:layout_alignBaseline="@+id/device_button_unlink" android:layout_alignBottom="@+id/device_button_unlink" android:layout_toLeftOf="@+id/device_button_unlink"></TextView>
        <ImageView android:id="@+id/device_image_people" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/people" android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/device_label_account_name"></ImageView>
    </RelativeLayout>
</RelativeLayout>
