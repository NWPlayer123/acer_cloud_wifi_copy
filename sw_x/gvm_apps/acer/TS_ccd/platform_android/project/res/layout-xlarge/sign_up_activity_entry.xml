<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1">
		<RelativeLayout
			android:layout_width="fill_parent" android:layout_margin="10dip" android:layout_height="163dp">
		    <RelativeLayout android:id="@+id/tablet_title_signup" android:layout_width="match_parent" android:layout_height="56dip">
		        <ImageView android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView2" android:layout_centerVertical="true" android:layout_alignParentLeft="true"></ImageView>
		        <TextView android:layout_width="wrap_content" android:textStyle="bold" android:textSize="25sp" android:layout_height="wrap_content" android:text="Register Acer Tian Shan Account" android:id="@+id/textView1" android:layout_centerVertical="true" android:layout_toRightOf="@+id/imageView2" android:layout_marginLeft="10dip"></TextView>
		        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView1" android:src="@drawable/acer_logo" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="10dp"></ImageView>
		    </RelativeLayout>
			<TextView android:layout_width="fill_parent"
                android:id="@+id/signup_text_summery"
				android:layout_height="wrap_content" android:text="@string/signup_label_summery"
                android:textSize="20sp" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:layout_marginTop="20dip"
                android:layout_below="@+id/tablet_title_signup"/>
            <ImageView
                android:id="@+id/signup_image_people1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:src="@drawable/people"
                android:layout_alignLeft="@+id/signup_text_summery"
                android:layout_below="@+id/signup_text_summery"/>
            <TextView
                android:id="@+id/signup_text_enter_your_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/signup_image_people1"
                android:layout_alignBottom="@+id/signup_image_people1"
                android:layout_marginLeft="10dip"
                android:text="Enter your details"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/signup_text_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signup_text_enter_your_detail"
                android:layout_below="@+id/signup_text_enter_your_detail"
                android:text="Your First Name"
                android:textSize="20sp"
                android:layout_marginTop="10dip"/>
			<EditText
    			android:inputType="textPersonName"
			    android:layout_width="400dip"
				android:layout_height="wrap_content"
                android:id="@+id/signup_edit_firstname"
                android:layout_alignLeft="@+id/signup_text_first_name"
                android:layout_below="@+id/signup_text_first_name"
				android:hint=""
				android:text="" />
			<EditText
			    android:inputType="textPersonName"
                android:layout_width="400dip"
                android:layout_height="wrap_content"
                android:id="@+id/signup_edit_lastname"
				android:hint=""
				android:text=""
                android:layout_toRightOf="@+id/signup_edit_firstname"
                android:layout_alignTop="@+id/signup_edit_firstname"
                android:layout_marginLeft="10dip"
                />
            <TextView
                android:id="@+id/signup_text_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signup_edit_lastname"
                android:layout_above="@+id/signup_edit_lastname"
                android:text="Your Last Name"
                android:textSize="20sp"/>

            <ImageView 
                android:id="@+id/signup_image_people2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:src="@drawable/people"
                android:layout_alignLeft="@+id/signup_image_people1"
                android:layout_below="@+id/signup_edit_lastname"
                />
            <TextView
                android:id="@+id/signup_text_enter_your_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/signup_image_people2"
                android:layout_alignBottom="@+id/signup_image_people2"
                android:layout_marginLeft="10dip"
                android:text="Enter your account information"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/signup_text_your_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signup_text_enter_your_account"
                android:layout_below="@+id/signup_text_enter_your_account"
                android:text="Your Email (As Acer account name)"
                android:textSize="20sp"
                android:layout_marginTop="10dip"/>
			<EditText
			    android:inputType="textEmailAddress"
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
                android:id="@+id/signup_edit_email"
                android:layout_alignLeft="@+id/signup_text_your_email"
                android:layout_below="@+id/signup_text_your_email"
                android:layout_alignRight="@+id/signup_edit_lastname"
				android:hint=""
				android:text=""
				/>
            <TextView
                android:id="@+id/signup_text_reenter_your_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signup_text_your_email"
                android:layout_below="@+id/signup_edit_email"
                android:text="Re-enter Your Email"
                android:textSize="20sp"/>
			<EditText
			    android:inputType="textEmailAddress"
				android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:id="@+id/signup_edit_confirm_email"
                android:layout_alignLeft="@+id/signup_text_your_email"
                android:layout_below="@+id/signup_text_reenter_your_email"
                android:layout_alignRight="@+id/signup_edit_lastname"
                android:hint=""
				android:text="" />
			<TextView
				android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/signup_edit_email"
                android:layout_alignBaseline="@+id/signup_edit_email"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dip"
				android:text="@string/signup_label_send_confirm_email"
                android:textSize="20sp"/>
			<CheckBox
                android:layout_width="fill_parent"
				android:layout_height="wrap_content"
                android:textSize="20sp"
				android:id="@+id/signup_checkbox_remember_account"
                android:text="@string/signup_label_remember_account"
                android:layout_below="@+id/signup_edit_confirm_email"
                android:layout_alignLeft="@+id/signup_edit_confirm_email"/>

			<TextView
			    android:id="@+id/signup_text_password"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/signup_checkbox_remember_account"
				android:layout_alignLeft="@+id/signup_text_reenter_your_email"
                android:text="@string/label_password"
                android:textSize="20sp"
				android:layout_marginTop="5dip"/>
			<EditText
                android:inputType="textPassword"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/signup_edit_password"
                android:layout_below="@+id/signup_text_password"
                android:layout_alignLeft="@+id/signup_edit_confirm_email"
				android:hint=""
				android:text="" android:layout_alignRight="@+id/signup_edit_firstname"/>
			<TextView
                android:layout_height="wrap_content"
                android:text="@string/signup_label_min_char"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/signup_edit_password"
                android:layout_alignBottom="@+id/signup_edit_password"
                android:layout_alignLeft="@+id/signup_edit_lastname"
                android:textSize="20sp" android:id="@+id/textView1"/>
		</RelativeLayout>
	</ScrollView>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" style="@android:style/ButtonBar">
		<Button
		    android:layout_height="wrap_content"
            android:text="cancel"
			android:textSize="24dip" android:layout_width="wrap_content"
			android:id="@+id/signup_button_back" android:layout_centerVertical="true"
			android:layout_alignParentRight="true"></Button>
		<Button
            android:layout_height="wrap_content"
            android:text="I accept, sign me up"
			android:textSize="24sp"
            android:layout_width="wrap_content"
			android:id="@+id/signup_button_next"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/signup_button_back"></Button>
	</RelativeLayout>

</LinearLayout>