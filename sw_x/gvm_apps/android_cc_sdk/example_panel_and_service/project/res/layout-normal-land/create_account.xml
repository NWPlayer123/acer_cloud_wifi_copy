<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">
    
    <LinearLayout android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        
	    <TextView android:text="@string/Prompt_UserName"
            android:layout_gravity="left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"></TextView>
	        
	    <EditText android:id="@+id/EditText_UserName" 
	        android:text=""
	        android:inputType="textWebEditText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"></EditText>
	        
	    <TextView android:text="@string/Prompt_Password"
            android:layout_gravity="left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"></TextView>
	        
	    <EditText android:id="@+id/EditText_Password" 
	        android:text=""
	        android:inputType="textPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"></EditText>
	        
	    <TextView android:text="@string/Prompt_ConfirmPassword"
            android:layout_gravity="left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"></TextView>
	        
	    <EditText android:id="@+id/EditText_ConfirmPassword" 
	        android:text=""
	        android:inputType="textPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"></EditText>
	        
    </LinearLayout>
    
    <LinearLayout android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        
	    <TextView android:text="@string/Prompt_Email"
            android:layout_gravity="left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"></TextView>
	        
	    <EditText android:id="@+id/EditText_Email" 
	        android:text=""
	        android:inputType="textEmailAddress"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"></EditText>
	        
	    <TextView android:text="@string/Prompt_RegKey"
            android:layout_gravity="left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"></TextView>
	        
	    <EditText android:id="@+id/EditText_RegKey" 
	        android:text=""
	        android:inputType="textWebEditText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"></EditText>
	        
	    <Button android:id="@+id/Button_CreateAccount"
	        android:text="@string/Button_CreateAccount"
	        android:onClick="onClick_CreateAccount"
	        android:gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingRight="40dp"
	        android:paddingLeft="40dp"
	        android:paddingTop="18dp"
	        android:paddingBottom="18dp"></Button>
	        
    </LinearLayout>
    
</LinearLayout>
